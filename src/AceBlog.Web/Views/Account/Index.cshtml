@{
    ViewBag.Title = "个人中心";
}
@this.Partial("Index_js")

@section Nav{
    @this.Html.Partial("../Shared/UserNav", "UserCenter")
}
  
<script type="text/javascript" src="/Content/knockout/knockout-3.4.2.js"></script>
<script type="text/javascript" src="/Content/knockout/knockout.mapping-latest.js"></script>
<script type="text/javascript" src="/Content/js/kohelper.js"></script>

<link href="/Content/layer/layer.css" rel="stylesheet" />
<script type="text/javascript" src="/Content/layer/layer.js"></script>

<script type="text/javascript" src="/Content/My97DatePicker/WdatePicker.js"></script>

<script type="text/javascript" src="/Content/js/ace.js"></script>

<style>
    .form-title {
        font-weight: bold;
    }
</style>

<div style="">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#basicInfo" data-toggle="tab">基本信息</a></li>
        <li><a href="#modifyPassword" data-toggle="tab">密码修改</a></li>
        <li><a href="#changHeadPhoto" data-toggle="tab">头像修改</a></li>
    </ul>
    <div class="tab-content" style="padding-top: 5px;">
        <div id="basicInfo" class="tab-pane active" style="padding: 15px;">
            <form id="userInfo" style="text-align:left;">
                <table style="margin-left:10px;width:260px;" class="form-table">
                    <tbody>
                        <tr>
                            <td style="width:50px;" class="form-title">用户名</td>
                            <td style="max-width:200px;" class="form-value"><input type="text" class="a-control" data-bind="value:user().AccountName,disable:user().AccountName" /></td>
                        </tr>
                        <tr>
                            <td class="form-title">昵称</td>
                            <td class="form-value"><input name="NickName" type="text" class="a-control" placeholder="请输入昵称" data-bind="value:user().NickName" /></td>
                        </tr>
                        <tr>
                            <td class="form-title">姓名</td>
                            <td class="form-value"><input name="Name" type="text" class="a-control" placeholder="请输入姓名" data-bind="value:user().Name" /></td>
                        </tr>
                        <tr>
                            <td class="form-title">性别</td>
                            <td class="form-value">
                                <label style="font-weight:unset !important;"><input type="radio" name="Gender" data-bind="typedChecked:user().Gender" value="1" /> 男</label>
                                <label style="font-weight:unset !important;margin-left:15px"><input type="radio" name="Gender" data-bind="typedChecked:user().Gender" value="2" /> 女</label>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-title">生日</td>
                            <td class="form-value">
                                <input type="text" class="a-control Wdate" data-bind="dateString:user().Birthday" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-title">介绍</td>
                            <td class="form-value">
                                <textarea class="a-control" style="height: 60px;" data-bind="value:user().Description"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:right;padding-top:15px;padding-right:8px;" colspan="2"><button class="a-btn-primary" data-bind="click:saveUserInfo">确认修改</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div id="modifyPassword" class="tab-pane" style="padding: 15px;">
            <form id="changePasswordForm">
                <table style="margin-left:10px;width:260px;" class="form-table">
                    <tbody>
                        <tr>
                            <td style="width:80px;" class="form-title">用户名</td>
                            <td style="max-width:200px;" class="form-value">
                                <input type="text" class="a-control" disabled="disabled" data-bind="value:user().AccountName" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-title">旧密码</td>
                            <td class="form-value">
                                <input type="password" class="a-control required" data-bind="value:passwordModel().OldPassword" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-title">新密码</td>
                            <td class="form-value">
                                <input type="password" class="a-control required" data-bind="value:passwordModel().NewPassword" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-title">确认新密码</td>
                            <td class="form-value">
                                <input type="password" class="a-control required" data-bind="value:passwordModel().NewPasswordConfirm" />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:right;padding-top:15px;padding-right:8px;" colspan="2"><button class="a-btn-primary" data-bind="click:changePassword">确认修改</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>

        <div id="changHeadPhoto" class="tab-pane" style="padding: 15px;">
            未实现
        </div>
    </div>
</div>
